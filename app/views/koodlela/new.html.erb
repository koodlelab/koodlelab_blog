<h1>Log In</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:admin_session, url: login_path) do |f| %>

      <%= f.label :user_name %>
      <%= f.text_field :user_name %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
